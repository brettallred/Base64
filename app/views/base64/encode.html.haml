= form_for(@convert, :url => url_for(:action => 'encode', :controller => 'base64'), :method => 'get', :html => {:class => 'form-horizontal' }) do |form|
  .control-group
    .controls
      = link_to "Encode", base64_encode_path, :class => "btn btn-primary"
      = link_to "Decode", base64_decode_path, :class => "btn btn-warning pull-right"
  .control-group
    .controls
      = form.label :encode_string, "String To Encode"
      = form.text_area :encode_string, :class => 'input-email', :style => "width: 350px; height: 150px"
  .control-group
    .controls  
      = form.label  :convert_type, "You can select output charset"
      = form.select :convert_type, options_from_collection_for_select(@charsets, 'id', 'caption', @convert.convert_type.to_i) 
  .control-group
    .controls
      = form.label :decode_string, "Decoded String"
      = form.text_area :decode_string, :class => 'input-email', :style => "width: 350px; height: 150px"
  .control-group
    .controls
      = form.submit "Convert", :class => "btn btn-success"